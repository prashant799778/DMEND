<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.OTP_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <com.example.adeb.Widget.Segow_UI_Bold_Font
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/EnterOTP"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />

        <com.example.adeb.Widget.Segow_UI_Font
            android:id="@+id/email_user2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/ItemText"
            android:textSize="14dp" />

        <com.example.adeb.Widget.otpEditText
            android:id="@+id/et_otp_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="28.5dp"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/solid_black"
            android:textIsSelectable="false"
            android:textSize="20sp">

        </com.example.adeb.Widget.otpEditText>

        <Button
            android:id="@+id/reset"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background"
            android:text="@string/Continue"
            android:textAllCaps="false"
            android:textColor="@color/white">

        </Button>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mask_group_7" />

    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/rotateloading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:loading_color="@color/colorPrimary"
            app:loading_speed="11"
            app:loading_width="2dp" />
    </RelativeLayout>

</RelativeLayout>































