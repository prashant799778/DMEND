<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayut"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/tool_rel"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/open_dawer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_icons_menu" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/open_dawer">

                <TextView
                    android:id="@+id/day_driver"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/DayDriver"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/lay_day_driver"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/top_tab_view">

                    <TextView
                        android:id="@+id/day_driver2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/DayDriver"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_toRightOf="@id/day_driver"
                    android:id="@+id/corporate"
                    android:layout_width="80dp"
                    android:layout_marginTop="11dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Corporate"
                    android:textColor="@color/colorPrimary" />
                <LinearLayout
                    android:layout_toRightOf="@id/day_driver"
                    android:id="@+id/lay_corporate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="6dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/top_tab_view">

                    <TextView
                        android:id="@+id/corporate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="@string/Corporate"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_toRightOf="@id/corporate"
                    android:id="@+id/hourly"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="@string/Hourly"
                    android:layout_marginTop="11dp"

                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:layout_toRightOf="@id/corporate"
                    android:id="@+id/lay_hourly"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/top_tab_view">

                    <TextView
                        android:id="@+id/hourly2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="@string/Hourly"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_toRightOf="@id/hourly"
                    android:id="@+id/oneRound"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/OneRound"
                    android:gravity="center"
                    android:layout_marginTop="11dp"
                    android:textColor="@color/colorPrimary" />
                <LinearLayout
                    android:layout_toRightOf="@id/hourly"
                    android:id="@+id/lay_one_round"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/top_tab_view">

                    <TextView
                        android:id="@+id/round2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="@string/OneRound"
                        android:textColor="@color/white" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <fragment xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tool_rel"
            tools:context=".Activitys.MainDashboardActivity" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_rel"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/address_fill_background"
            android:padding="14dp">


            <RelativeLayout
                android:id="@+id/l123"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null">

                <EditText
                    android:id="@+id/pickUpAdress"
                    android:layout_width="315dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_home_run"
                    android:drawablePadding="6dp"
                    android:ems="10"
                    android:hint="TYPE HERE"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="@color/address"
                    android:textColorHint="@color/address"
                    android:textSize="12dp">

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/cross"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_close" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/l123"
                android:layout_marginTop="10dp"
                android:background="@null">


                <EditText
                    android:id="@+id/distination_address"
                    android:layout_width="315dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_cursor"
                    android:drawablePadding="6dp"
                    android:ems="10"
                    android:hint="TYPE HERE"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="@color/destination"
                    android:textColorHint="@color/destination"
                    android:textSize="12dp">

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/cross2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:paddingBottom="10dp">


            <LinearLayout
                android:id="@+id/goto_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="11dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circular_layout"
                    android:padding="5dp">

                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohit"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_phone_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8059340597"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top"
            android:background="@color/white"
            android:choiceMode="singleChoice"
            android:dividerHeight=".5dp"
            android:paddingTop="30dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingLeft="21dp"
            android:paddingBottom="22dp">

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logout" />

            <TextView
                android:id="@+id/list_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="21dp"
                android:text="@string/LogOut"
                android:textColor="@color/ItemText"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>


